<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".KalkulatorActivity">




        <LinearLayout
            android:id="@+id/linearInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/textBil1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:gravity="left"

                android:text="Bilangan 1"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editBil1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="0"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearInput2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/linearInput">

            <TextView
                android:id="@+id/textBil2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:gravity="left"

                android:text="Bilangan 2"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editBil2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="0"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/linearInput2">

            <TextView
                android:id="@+id/textHasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:gravity="left"

                android:text="Hasil"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textHasilAkhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:gravity="right"

                android:text="0"
                android:textColor="#000"
                android:textSize="20sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearHasil"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/linearInput"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBagi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="/"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnKali"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="X"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="" />


                <Button
                    android:id="@+id/btnTambah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="#fff"
                    android:textSize="20sp" />


                <Button
                    android:id="@+id/btnKurang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

